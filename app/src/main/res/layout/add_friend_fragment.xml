<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.personal.addFriend.addFriendFragment">

    <TextView
        android:id="@+id/addfriendTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Addfriend"
        android:textSize="35sp"
        android:background="@color/design_default_color_primary"
        android:textColor="@color/white"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/findFriendEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/cardview_dark_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/friend_email_address"
        android:ems="10"
        android:layout_weight="2"
        android:inputType="textEmailAddress"
        android:autofillHints="" />

        <ImageView
            android:id="@+id/searchbutton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_baseline_search_24"
            app:tint="@color/cardview_dark_background" />


    </LinearLayout>

    <TextView
        android:id="@+id/friendNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="" />

    <Button
        android:id="@+id/addFriendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#008000"
        android:visibility="invisible"
        android:text="@string/Addfriend" />


</LinearLayout>