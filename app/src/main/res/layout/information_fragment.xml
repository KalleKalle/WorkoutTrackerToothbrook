<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.personal.seeInformation.InformationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/Titleinformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/information"
                android:textSize="35sp"
                android:background="@color/design_default_color_primary"
                android:textColor="@color/white"
                android:gravity="center"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/heightinfo"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/heightStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weightinfo"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/weightStatus"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/idealweightinfo"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/targetWeightStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/your_bmi"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/bmiStatus"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kcal_burned_this_week"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/kCalburnedWeek"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kcal_left_until_goal_reached"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/KcalGoal"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="3"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/km_left_until_goal_reached"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/kmGoal"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="3"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>